#!/usr/bin/env sh

interval=1
rxs=0
txs=0

alsa() {
VOL=$(amixer get Master | tail -n1 | sed -r "s/.*\[(.*)%\].*/\1/")
  if [ "$VOL" -eq 0 ]; then
    printf "üîá muted"
  elif [ "$VOL" -gt 0 ] && [ "$VOL" -le 33 ]; then
    printf "üîà %s%%" "$VOL"
  elif [ "$VOL" -gt 33 ] && [ "$VOL" -le 66 ]; then
    printf "üîâ %s%%" "$VOL"
  else
    printf "üîä %s%%" "$VOL"
  fi
}

mail() {
MAILBOX=$(ls ~/.local/share/mail/*/INBOX/new/* | wc -l)
  if [ "$MAILBOX" -eq 0 ]; then
    printf "üì¨:%s" "$MAILBOX"
  else
    printf "üì¨:%s" "$MAILBOX"
  fi
}

while true; do
  # Network Interface Name
  interface=$(ip route get 8.8.8.8 2>/dev/null| awk '{print $5}')

  # Time
  LOCALTIME=$(date +%a\-%d\-%b-%I:%M:%S-%p)

  # CPU
  CPU_TEMP=$(sed 's/000$/¬∞C/' /sys/class/thermal/thermal_zone0/temp)
  CPU_F=$(cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_cur_freq)
  CPU_FREQ=$(expr "$CPU_F" / 1000)

  # GPU
  GPU_TEMP=$(nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits)

  # Used and total memory
  MEMUSED=$(free -h | awk '/^Mem:/ {print $3 "/" $2}')

  # Weather
  WEATHER=$(cat $HOME/.cache/Weather.tmp)

  # MPC
  MPC=$(mpc | sed -n '1,1p' | cut -c -70)

# Status
xsetroot -name " $MPC [$(alsa)][üåê ${rxs}kb/${txs}kb][$(mail)][üß† ${MEMUSED}][üëæ ${GPU_TEMP}¬∞C][üñ• ${CPU_FREQ}Mhz ${CPU_TEMP}] üïë $LOCALTIME "

  rx1=$(cat /sys/class/net/$interface/statistics/rx_bytes)
  tx1=$(cat /sys/class/net/$interface/statistics/tx_bytes)

  sleep $interval

  rx2=$(cat /sys/class/net/$interface/statistics/rx_bytes)
  tx2=$(cat /sys/class/net/$interface/statistics/tx_bytes)
  rxs=$(expr $rx2 - $rx1)
  txs=$(expr $tx2 - $tx1)
  rxs=$(expr $rxs / $interval)
  txs=$(expr $txs / $interval)
  rxs=$(expr $rxs / 1024)
  txs=$(expr $txs / 1024)
done &
