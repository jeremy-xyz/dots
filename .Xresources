! Name: Xresources configuration
! Author: koltea

#include ".config/colorschemes/nord"

! Fonts
Xft*dpi: 96
Xft*antialias: true
Xft*hinting: 1
Xft*hintstyle: hintslight
Xft*autohint: false
Xft*rgba: rgba
Xft*lcdfilter: lcddefault
Xcursor*theme: Hackneyed

! XTerm
XTerm*termName: xterm-256color
XTerm*saveLines: 4096
XTerm*utf8: 1
XTerm*loginShell: true
XTerm*internalBorder: 17
XTerm*font: monospace
XTerm*faceName: monospace:size=11
XTerm*renderFont: true
XTerm*cursorBlink: false
XTerm*ScrollBar: false

! XTerm bindings
! XTerm resize font
XTerm*vt100.translations: #override \n\
    Ctrl <Key> j:smaller-vt-font() \n\
    Ctrl <Key> k:larger-vt-font() \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD)
